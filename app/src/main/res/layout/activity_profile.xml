<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#15a0bf"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"

                android:layout_width="50dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/arrow"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Details"
                android:textColor="#fff"
                android:textSize="15dp"
                android:layout_marginLeft="50dp" />
        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_pro"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="10dp"
            tools:srcCompat="@drawable/profile" />
        <TextView
            android:id="@+id/txt_bio"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="BioData"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/Txt_insta"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/insta"
            android:text="InstaUrl"
            android:textColor="#15bfbf"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txt_youtube"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/youtube"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:textColor="#15bfbf"
            android:text="YouTubeUrl"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/txt_website"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/link"
            android:layout_marginTop="10dp"
            android:textColor="#15bfbf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebUrl"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>